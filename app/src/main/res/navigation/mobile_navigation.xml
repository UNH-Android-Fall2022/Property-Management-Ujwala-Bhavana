    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_properties">

    <fragment
        android:id="@+id/navigation_properties"
        android:name="com.example.property_management.ui.properties.propertiesFragment"
        android:label="@string/title_properties"
        tools:layout="@layout/fragment_properties" />

    <fragment
        android:id="@+id/navigation_requests"
        android:name="com.example.property_management.ui.requests.RequestsFragment"
        android:label="@string/title_requests"
        tools:layout="@layout/fragment_requests" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.property_management.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_account"
